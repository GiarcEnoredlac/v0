$blue = #11242f
$secondary-blue = #B7BCBF
$hover = #FFC328
$transition-time = 0.2s
$radius = 2px
$source = #E7EFF2
$target = #C6E7FF
$sans = 'Open Sans', helvetica, sans-serif
$serif = 'Lora', serif

button()
  font-family $sans
  display inline-block
  resize none
  outline none
  margin 2em initial 0
  padding .7em
  cursor pointer
  text-align center
  border-radius $radius
  background lighten($hover, 40%)
  border none

  &:hover
    background $hover