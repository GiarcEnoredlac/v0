{{app-navigation}}
<section class="page">
  {{#link-to "dashboard" tagName="a" class="back"}}Back{{/link-to}}
  <section class="book open createBook">
    <section class="top-navigation">
      {{#if favorite}}
        <a class="icon star favorite" title="Favorite"></a>
        {{else}}
        <a class="icon star" title="Favorite"></a>
      {{/if}}
      <input type="text" value="Phrasebook Title" tabindex=1 onclick="this.value='';" onblur="this.value=!this.value?'Phrasebook Title':this.value;">
      <a class="icon more" title="More"></a>
      </div>
    </section>
    <section class="banner">
      <img {{bind-attr src="bannerUrl" alt="User"}} class="fallback">
    </section>
    <section class="language-navigation">
      <input type="text" class="language" value="Source Language" tabindex=2  onclick="this.value='';" onblur="this.value=!this.value?'Source Language':this.value;">
      <span class="direction"></span>
      <input type="text" class="language" value="Target Language" tabindex=3  onclick="this.value='';" onblur="this.value=!this.value?'Target Language':this.value;">
    </section>
    <section class="phrases">
      <ul class="entries">
        {{#each phrases}}
          <li class="entry">
            <ul>
              <li class="source">
                <p>{{sourcePhrase}}</p>
                {{phrase-options}}
              </li>
              <li class="target">
                <p>{{targetPhrase}}</p>
                {{phrase-options}}
              </li>
            </ul>
          </li>
          {{else}}
          <p class="empty">Shoot! There is nothing here!</p>
        {{/each}}
        <li class="entry entering">
          <ul>
            <li class="source">
              <p>
                <span class="progress">
                  <span></span>
                  <span></span>
                  <span></span>
                </span>
              </p>
            </li>
            <li class="target">
              <p>
                <span class="progress">
                  <span></span>
                  <span></span>
                  <span></span>
                </span>
              </p>
            </li>
          </ul>
        </li>
      </ul>
      <div class="newPhrase">
        <input class="input" type="text" value="Source Phrase" tabindex=1 onclick="this.value='';" onblur="this.value=!this.value?'Source Phrase':this.value;">
        <a class="icon save" title="Save">Save</a>
      </div>
      <div class="addPhrase">
        <button {{action "addPhrase"}}>+</button>
      </div>
    </section>
  </section>
</section>

